{
  "name": "@stafftraveler/ralph",
  "version": "1.0.0",
  "description": "Interactive CLI for running a Ralph Wiggum loop in Claude Code",
  "type": "module",
  "bin": {
    "ralph": "./bin/ralph"
  },
  "files": [
    "bin/",
    "src/",
    "README.md",
    "LICENSE",
    "tsconfig.json"
  ],
  "scripts": {
    "postinstall": "node ./bin/postinstall.js",
    "check:types": "tsc --noEmit",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --write ./src",
    "format": "biome format --write ./src",
    "check": "biome check ./src",
    "check:fix": "biome check --write ./src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "ralph": "./bin/ralph"
  },
  "keywords": [
    "cli",
    "claude",
    "anthropic",
    "ai",
    "automation",
    "code-generation",
    "developer-tools"
  ],
  "author": "StaffTraveler",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stafftraveler/ralph-cli.git"
  },
  "homepage": "https://github.com/stafftraveler/ralph-cli#readme",
  "bugs": {
    "url": "https://github.com/stafftraveler/ralph-cli/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.25",
    "@inkjs/ui": "^2.0.0",
    "@linear/sdk": "^72.0.0",
    "chalk": "^5.4.0",
    "commander": "^14.0.2",
    "execa": "^9.5.0",
    "ink": "^6.6.0",
    "ink-gradient": "^3.0.0",
    "ink-select-input": "^6.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "cloudflared": "^0.7.1",
    "node-notifier": "^10.0.1",
    "open": "^11.0.0",
    "react": "^19.2.4",
    "tsx": "^4.21.0",
    "uuid": "^13.0.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/node": "^25.1.0",
    "@types/node-notifier": "^8.0.5",
    "@types/react": "^19.2.10",
    "@types/uuid": "^11.0.0",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.18",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22"
  },
  "license": "MIT"
}
